datasource db {
  provider = "postgresql"
  url      = env("PG_CORE_FEATURES_BLOG_ENV_DOCKER")
}

generator client {
  provider = "prisma-client-js"
}

// / User model comment
model User {
  id    String  @default(uuid()) @id
  email String  @unique
  // / name comment
  name  String?
  posts Post[]
}

model Post {
  id        String   @default(cuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean
  title     String
  content   String?
  authorId  String?
  author    User?    @relation(fields: [authorId], references: [id])
  jsonData  Json?
}

enum Role {
  USER
  ADMIN
}
